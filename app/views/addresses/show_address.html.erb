<section class="container">
  <section class="row justify-content-center ">
    <section class="col-lg-4 border my-5">
      <div class="row">
        <div class="card mb-4 mb-md-0">
          <div class="card-body">
            <h5> Select Delivery Address </h5>
            <% @addresses.each do |address| %>
            <span style="color: blue;"><%= link_to 'edit',edit_address_path(:id => address.id), class: "dropdown-item"  %>
            <span style="color: blue;"><%= link_to 'delete',address_path(:id => address.id),method: :delete, class: "dropdown-item"  %>
            <span style="color: grey;"><p><%= address.type %></p>
            <span style="color: black;"><p><%= address.address %></p>
              <%= link_to 'Add' ,add_shipping_address_path(:id => address.id), method: :get, class: "btn btn-outline-secondary btn-sm"  %>
            <br><hr>
            <%end%>
            <%= link_to 'Add New' ,new_address_path %>
          </div>
        </div>
      </div>
</section>
</section>
</section>