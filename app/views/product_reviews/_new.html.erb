<%= form_with model: ProductReview.new, :id => 'my-form', remote: true do |form| %>
  <p>
    <%= form.label :Review %><br>
   	<%= form.text_area :review, :id => "body_input"  %>
  </p>
  <p>
    <%= form.hidden_field :product_id, value: @product.id %>
  </p>
  <p>
    <%= form.hidden_field :user_id, value: current_user.id %>
  </p>
  <p>
    <%= form.submit%> 
  </p>
<%end%>